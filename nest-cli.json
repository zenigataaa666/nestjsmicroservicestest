{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/api-gateway/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/api-gateway/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/api-gateway",
  "projects": {
    "api-gateway": {
      "type": "application",
      "root": "apps/api-gateway",
      "entryFile": "main",
      "sourceRoot": "apps/api-gateway/src",
      "compilerOptions": {
        "tsConfigPath": "apps/api-gateway/tsconfig.app.json"
      }
    },
    "auth-manager": {
      "type": "application",
      "root": "apps/auth-manager",
      "entryFile": "main",
      "sourceRoot": "apps/auth-manager/src",
      "compilerOptions": {
        "tsConfigPath": "apps/auth-manager/tsconfig.app.json"
      }
    },
    "manage-employees": {
      "type": "application",
      "root": "apps/manage-employees",
      "entryFile": "main",
      "sourceRoot": "apps/manage-employees/src",
      "compilerOptions": {
        "tsConfigPath": "apps/manage-employees/tsconfig.app.json"
      }
    },
    "common": {
      "type": "library",
      "root": "libs/common",
      "entryFile": "index",
      "sourceRoot": "libs/common/src",
      "compilerOptions": {
        "tsConfigPath": "libs/common/tsconfig.lib.json"
      }
    }
  }
}